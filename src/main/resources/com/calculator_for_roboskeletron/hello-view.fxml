<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<Pane fx:controller="com.calculator_for_roboskeletron.Controller" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox alignment="CENTER" spacing="5.0">
            <children>
                <TextField fx:id="textField" editable="false" />
                <HBox spacing="1.0">
                    <children>
                        <Button fx:id="button1" onAction="#pressNum" minWidth="30.0" mnemonicParsing="false" text="1" />
                        <Button fx:id="button2" onAction="#pressNum" minWidth="30.0" mnemonicParsing="false" text="2" />
                        <Button fx:id="button3" onAction="#pressNum" minWidth="30.0" mnemonicParsing="false" text="3" />
                        <Button fx:id="C" onAction="#wipe" minWidth="30.0" mnemonicParsing="false" text="C" />
                        <Button fx:id="CE" onAction="#wipe" minWidth="30.0" mnemonicParsing="false" text="CE" />
                        <Button onAction="#delete" minWidth="30.0" mnemonicParsing="false" text="&lt;-" />
                    </children>
                </HBox>
                <HBox spacing="1.0">
                    <children>
                        <Button fx:id="button4" onAction="#pressNum" minWidth="30.0" mnemonicParsing="false" text="4" />
                        <Button fx:id="button5" onAction="#pressNum" minWidth="30.0" mnemonicParsing="false" text="5" />
                        <Button fx:id="button6" onAction="#pressNum" minWidth="30.0" mnemonicParsing="false" text="6" />
                        <Button fx:id="buttonPlus" onAction="#pressAct" minWidth="30.0" mnemonicParsing="false" text="+" />
                        <Button fx:id="buttonSubs" onAction="#pressAct" minWidth="30.0" mnemonicParsing="false" text="-" />
                        <Button fx:id="buttonMult" onAction="#pressAct" minWidth="30.0" mnemonicParsing="false" text="*" />
                    </children>
                </HBox>
                <HBox spacing="1.0">
                    <children>
                        <Button fx:id="button7" onAction="#pressNum" minWidth="30.0" mnemonicParsing="false" text="7" />
                        <Button fx:id="button8" onAction="#pressNum" minWidth="30.0" mnemonicParsing="false" text="8" />
                        <Button fx:id="button9" onAction="#pressNum" minWidth="30.0" mnemonicParsing="false" text="9" />
                        <Button fx:id="buttonDiv" onAction="#pressAct" minWidth="30.0" mnemonicParsing="false" text="/" />
                        <Button fx:id="buttonPerc" onAction="#pressAct" minWidth="30.0" mnemonicParsing="false" text="\%" />
                        <Button onAction="#result" minWidth="30.0" mnemonicParsing="false" text="=" />
                    </children>
                </HBox>
                <HBox spacing="1.0">
                    <children>
                        <Button fx:id="button0" onAction="#pressNum" minWidth="30.0" mnemonicParsing="false" text="0" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</Pane>
